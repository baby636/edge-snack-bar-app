{
  "name": "edge-snack-bar-app",
  "version": "0.1.0",
  "private": true,
  "description": "An app for purchasing snacks in the Edge office",
  "repository": "https://github.com/EdgeApp/edge-snack-bar-app",
  "license": "MIT",
  "author": "Airbitz, Inc.",
  "main": "lib/index.js",
  "scripts": {
    "build.lib": "sucrase -q -t typescript,imports,jsx -d ./lib ./src",
    "build.types": "tsc",
    "clean": "rimraf lib",
    "demo": "parcel serve src/index.html --open",
    "fix": "npm run lint -- --fix",
    "lint": "eslint .",
    "precommit": "lint-staged && npm-run-all test -p build.*",
    "prepare": "husky install && npm-run-all clean -p build.*",
    "test": "mocha -r sucrase/register 'test/**/*.test.ts'"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "cors": "^2.8.5",
    "edge-core-js": "^0.19.33",
    "edge-currency-bitcoin": "^4.9.15",
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-react": "^7.8.3",
    "@types/chai": "^4.2.9",
    "@types/express": "^4.17.2",
    "@types/mocha": "^7.0.1",
    "@types/react": "^16.9.22",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^8.3.0",
    "chai": "^4.3.10",
    "eslint": "^8.44.0",
    "eslint-config-standard-kit": "0.15.1",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.29.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^15.2.4",
    "mocha": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.2.0",
    "sucrase": "^3.12.1",
    "typescript": "^4.1.2"
  }
}
